<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBackground"
    android:weightSum="10">
    <LinearLayout
        android:gravity="center"
        android:layout_margin="@dimen/margin5"
        android:layout_weight="3"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="@dimen/margin5"
            android:id="@+id/imgGiohang"
            android:adjustViewBounds="true"
            android:layout_width="match_parent"
            android:layout_height="100dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin5"
        android:layout_weight="7"
        android:gravity="center"
        android:layout_marginTop="@dimen/margin5"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtTengiohang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ten_mon_hang"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtGiagiohang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/gia_mon_hang"
            android:textColor="#dd8400"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnTru"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin2"
                android:layout_marginBottom="@dimen/margin2"
                android:background="@color/blueGrayButton"
                android:focusable="false"
                android:text="-"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="25sp" />

            <Button
                android:id="@+id/btnvalues"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin2"
                android:layout_marginBottom="@dimen/margin2"
                android:background="@color/mainBackground"
                android:focusable="false"
                android:text="1"
                android:textColor="@color/blueGrayText"
                android:textSize="25sp" />

            <Button

                android:id="@+id/btnCong"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:background="@color/blueGrayButton"
                android:layout_marginTop="@dimen/margin2"
                android:layout_marginBottom="@dimen/margin2"
                android:textColor="@color/white"
                android:focusable="false"
                android:text="+"
                android:textSize="25sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>